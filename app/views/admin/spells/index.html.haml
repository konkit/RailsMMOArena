%p#notice= notice
%h1 Listing Spells
%table
  %thead
    %tr
      %th{:colspan => "3"}
  %tbody
    - @spells.each do |spell|
      %tr
        %td= link_to 'Show', [:admin, spell]
        %td= link_to 'Edit', edit_admin_spell_path(spell)
        %td= link_to 'Destroy', [:admin, spell], method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Spell', new_admin_spell_path
