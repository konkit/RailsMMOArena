%p#notice= notice
%h1 Listing Items
%table
  %thead
    %tr
      %th{:colspan => "4"}
  %tbody
    - @items.each do |item|
      %tr
        %td= item.id
        %td= item.name
        %td= link_to 'Show', [:admin, item]
        %td= link_to 'Edit', edit_admin_item_path(item)
        %td= link_to 'Destroy', [:admin, item], method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Item', new_admin_item_path
